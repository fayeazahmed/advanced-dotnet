@model List<ProductCRUDCart.Models.Entities.Product>
@{
    ViewBag.Title = "Index";
}

<h2>List</h2>
<a class="btn btn-primary" href="/Product/Create">Add Product</a>
<hr>
<h3>All Product</h3>
<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Qty</th>
        <th>Price</th>
        <th>Description</th>
    </tr>

    @foreach (var p in Model)
    {
        <tr>
            <td>@p.Id</td>
            <td>@p.Name</td>
            <td>@p.Qty</td>
            <td>@p.Price</td>
            <td>@p.Descr</td>
            <td><a href="/Product/Edit/@p.Id" class="btn btn-success">Edit</a></td>
            <td><a href="/Product/Delete/@p.Id" class="btn btn-danger">Delete</a></td>
        </tr>
    }
</table>
