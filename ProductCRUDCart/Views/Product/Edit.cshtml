@model ProductCRUDCart.Models.Entities.Product

<h2>Edit</h2>
<form action="/Product/Update/@Model.Id" method="post">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-4">
                Name: <input type="text" class="form-control" name="name" value="@Model.Name" />
            </div>
            <div class="col-4">
                Qty: <input type="number" class="form-control" name="qty" value="@Model.Qty" />
            </div>
            <div class="col-4">
                Price: <input type="text" class="form-control" name="price" value="@Model.Price">
            </div>
        </div>
        
        <div class="row justify-content-center">
            <input type="submit" value="Update" class="btn btn-success" />
        </div>
        
    </div>
</form>

