@model ProductCRUDCart.Models.Entities.Product
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<form action="/Product/Create" method="post">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-4">
                Name: <input type="text" class="form-control" name="name" value="" />
            </div>
            <div class="col-4">
                Qty: <input type="number" class="form-control" name="qty" value="" />
            </div>
            <div class="col-4">
                Price: <input type="text" class="form-control" name="price" value="">
            </div>
        </div>
        <input type="submit" value="Add" class="btn btn-success" />
    </div>
</form>
